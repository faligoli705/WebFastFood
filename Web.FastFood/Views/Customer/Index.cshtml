@model List<WebFastFood.Models.CustomersDto>
@using System.Security.Claims;

@{
    ViewData["Title"] = "Index";
    int rowCount = 1;
}


<h1> Welcome @User.Identity.Name</h1>
<h3>
    <a asp-action="Create" class="btn btn-success">Create New Customer</a>
</h3>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Family</th>
        <th>Mobile</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@rowCount</td>
            <td>@item.FName</td>
            <td>@item.LName</td>
            <td>@item.Mobile</td>
            <td>
                <a href="/Customer/Edit/@item.Id" class="btn btn-warning">Edit</a>
                <a href="/Customer/Delete/@item.Id" onclick="return confirm('Are you sure Delete User: @item.FName')" class="btn btn-danger">Delete</a>
                <a href="/Product/Product" class="btn btn-primary">Product List</a>
            </td>
        </tr>
        rowCount++;
    }
</table>